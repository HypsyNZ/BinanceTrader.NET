<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
	</startup>
	<runtime>
		<configSections>
			<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net, Version=1.2.10.0, Culture=neutral, PublicKeyToken=1b44e1d426115821" />
			<log4net>
				<appender name="General" type="log4net.Appender.FileAppender,log4net">
					<file value="C:\\BNET\\log.txt" />
					<appendToFile value="true" />
					<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
					<layout type="log4net.Layout.PatternLayout">
						<conversionPattern value="%date [%2.2thread] %-5level - %message%newline" />
					</layout>
					<filter type="log4net.Filter.LevelRangeFilter">
						<levelMin value="INFO" />
						<levelMax value="FATAL" />
					</filter>
				</appender>
				<root>
					<level value="DEBUG" />
					<appender-ref ref="General" />
				</root>

				<appender name="Alerts" type="log4net.Appender.FileAppender,log4net">
					<file value="C:\\BNET\\alerts.txt" />
					<appendToFile value="true" />
					<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
					<layout type="log4net.Layout.PatternLayout">
						<conversionPattern value="%date - %message%newline" />
					</layout>
					<filter type="log4net.Filter.LevelRangeFilter">
						<levelMin value="INFO" />
						<levelMax value="FATAL" />
					</filter>
				</appender>
				<logger additivity="false" name="Alerts">
					<level value="DEBUG" />
					<appender-ref ref="Alerts" />
				</logger>
			</log4net>
		</configSections>
		<assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
			<probing privatePath="x64" />
			<dependentAssembly>
				<assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-13.0.0.0" newVersion="13.0.0.0" />
			</dependentAssembly>
		</assemblyBinding>
	</runtime>
</configuration>